generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Word {
  id             String  @default(auto()) @map("_id") @db.ObjectId
  word           String  
  description    String 
  user           String
  up             Int 
  donw           Int
  comments       Comment[] 
}


model Comment {
  id             String  @default(auto()) @map("_id") @db.ObjectId
  description    String 
  user           String
  up             Int 
  donw           Int
}


